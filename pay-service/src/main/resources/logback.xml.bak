<?xml version="1.0" encoding="UTF-8"?>
<!-- Reference Manual http://logback.qos.ch/manual/index.html -->
<configuration>
    <property resource="config.properties"/>
    <property name="log.path" value="/search/pay/log"/>

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%5p [%t] %logger{36} %L %m %n</pattern>
        </encoder>
    </appender>

    <appender name="orderTraceAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/orderTrace/orderTrace.log.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>3</maxHistory>
        </rollingPolicy>
        <encoder>
            <!--<pattern>%d{yyyy-MM-dd HH:mm:ss}%msg%n</pattern>-->
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <appender name="errorOrderTraceAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/orderTrace/orderTrace-error.log.%d{yyyy-MM-dd}</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %thread %X{invokeNo} %logger{40} %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter"><!-- 只打印错误日志 -->
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!--<appender name="orderKafkaAsyncAppender" class="com.sogou.passport.platform.logback.api.kafka.MultiKafkaAppender"
              additivity="false">
        <zkList>${kafka.zkList}</zkList>
        <brokerList>${kafka.brokerList}</brokerList>
        <topic>${kafka.topic.order}</topic>
        <poolSize>10</poolSize>
        <async>true</async>
        <encoder>
            <pattern>%msg</pattern>
        </encoder>
    </appender>

    <appender name="localAsyncAppender" class="com.sogou.passport.platform.logback.async.AsyncMultiThreadAppender">
        <queueSize>512</queueSize>
        <workerSize>1</workerSize>
        <appender-ref ref="orderTraceAppender"/>
    </appender>



    <!-- 写本地日志使用同步方法，避免日志丢失？Or以丢失换取稳定性 -->
    <logger name="orderLoggerAsync" level="info" additivity="false">
        <!--<appender-ref ref="orderKafkaAsyncAppender"/>-->
        <appender-ref ref="Console"/>
        <appender-ref ref="orderTraceAppender"/>
        <!--<appender-ref ref="errorOrderTraceAppender"/>-->
        <!--<appender-ref ref="localAsyncAppender"/>-->
    </logger>

    <!-- 日志输出级别 -->
    <root level="INFO">
        <appender-ref ref="Console"/>
        <appender-ref ref="orderTraceAppender"/>
    </root>




    <logger name="orderLoggerLocal" level="info" additivity="false">
        <appender-ref ref="orderTraceAppender"/>
        <!--<appender-ref ref="localAsyncAppender"/>-->
    </logger>

    <appender name="redisMissAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/redisMiss/redisMiss.log.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>14</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d %msg %n</pattern>
        </encoder>
    </appender>
    <logger name="redisMissLogger" level="info" additivity="false">
        <appender-ref ref="redisMissAppender"/>
    </logger>

    <appender name="dBRedisMissAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/dBRedisMiss/redisMiss.log.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>14</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d %msg %n</pattern>
        </encoder>
    </appender>
    <logger name="dBRedisMissLogger" level="info" additivity="false">
        <appender-ref ref="dBRedisMissAppender"/>
    </logger>

    <!--start:httpClient性能log-->
    <appender name="httpclientFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/httpclient/perfStats.log.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%msg %n</pattern>
        </encoder>
    </appender>
    <appender name="httpclientCoalescingStatistics" class="org.perf4j.logback.AsyncCoalescingStatisticsAppender">
        <!--每分钟分析一次log，做出性能测试-->
        <param name="TimeSlice" value="60000"/>
        <appender-ref ref="httpclientFileAppender"/>
    </appender>
    <logger name="httpClientTimingLogger" level="info" additivity="false">
        <appender-ref ref="httpclientCoalescingStatistics"/>
    </logger>
    <!--end:httpClient性能log-->

    <!--start:web服务器性能log-->
    <appender name="webPerfFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/webperf/perfStats.log.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%msg %n</pattern>
        </encoder>
    </appender>
    <appender name="webCoalescingStatistics" class="org.perf4j.logback.AsyncCoalescingStatisticsAppender">
        <!--每分钟分析一次log，做出性能测试-->
        <param name="TimeSlice" value="60000"/>
        <appender-ref ref="webPerfFileAppender"/>
    </appender>
    <logger name="webTimingLogger" level="info" additivity="false">
        <appender-ref ref="webCoalescingStatistics"/>
    </logger>
    <!--end:httpClient性能log-->

    <!--start:redis请求log-->
    <appender name="redisPerfFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/redis/perfStats.log.%d{yyyy-MM-dd}</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%msg %n</pattern>
        </encoder>
    </appender>
    <appender name="redisCoalescingStatistics" class="org.perf4j.logback.AsyncCoalescingStatisticsAppender">
        <!--每分钟分析一次log，做出性能测试-->
        <param name="TimeSlice" value="60000"/>
        <appender-ref ref="redisPerfFileAppender"/>
    </appender>
    <logger name="redisTimingLogger" level="info" additivity="false">
        <appender-ref ref="redisCoalescingStatistics"/>
    </logger>
    <!--end:web服务器性能log-->

    <!--start:mysql请求log-->
    <appender name="dbPerfFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/mysql/perfStats.log.%d{yyyy-MM-dd}</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%msg %n</pattern>
        </encoder>
    </appender>
    <appender name="dbCoalescingStatistics" class="org.perf4j.logback.AsyncCoalescingStatisticsAppender">
        <!--每分钟分析一次log，做出性能测试-->
        <param name="TimeSlice" value="60000"/>
        <appender-ref ref="dbPerfFileAppender"/>
    </appender>
    <logger name="dbTimingLogger" level="info" additivity="false">
        <appender-ref ref="dbCoalescingStatistics"/>
    </logger>
    <!--end:web服务器性能log-->

    <root level="info">
        <appender-ref ref="Console"/>
    </root>
</configuration>